<div class="container">
  <div class="card my-3 ">
    <div class="card-body">
      <%= gravatar_for @user, size:200 %>
      <h3 class="mt-3 text-center"><%= @user.username%></h3>
      <div class="text-center mt-3">
      <%if logged_in? && @user == current_user%>
        <%= link_to "Edit your Profile", edit_user_path(@user), class: "btn btn-outline-primary" %>
        <%= link_to "Delete my Account", user_path(@user), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure you want to delete your account?"} %>
      <%end%>
      </div>
    </div>
  </div>
  <%= render 'articles/articles-list' %>
</div>
