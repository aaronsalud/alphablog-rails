<%= render 'shared/errors', obj: @user%>
<div class="card shadow-lg bg-white rounded mt-3">
  <h5 class="card-header text-center"><%= header_title %></h5>
  <div class="card-body p-5">
    <%= form_with(model: @user, local: true)  do |f|%>
      <div class="form-group row">
        <label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg"><%= f.label :username%>:</label>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control form-control-lg", id:"username", placeholder: "Enter a username" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg"><%= f.label :email%>:</label>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control form-control-lg", id:"email", placeholder: "Enter an email address" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg"><%= f.label :password%>:</label>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control form-control-lg", id:"password", placeholder: "Enter a password" %>
        </div>
      </div>

      <div class="form-group row">
        <label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg"><%= f.label :password_confirmation%>:</label>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, class: "form-control form-control-lg", id:"password_confirmation", placeholder: "Enter a password confirmation" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="justify-center m-auto">
          <%= f.submit (@user.new_record? ? "Sign up" : "Save Changes"), class: "btn btn-success btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
