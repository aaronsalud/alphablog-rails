<%= render 'shared/errors', obj: @category%>
<div class="card shadow-lg bg-white rounded mt-3">
  <h5 class="card-header text-center"><%= header_title %></h5>
  <div class="card-body p-5">
    <%= form_with(model: @category, local: true)  do |f|%>
      <div class="form-group row">
        <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"><%= f.label :name%>:</label>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control form-control-lg", id:"name" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="justify-center m-auto">
          <%= f.submit class: "btn btn-success btn-lg" %>
          <%= link_to 'Cancel', categories_path, class: "btn btn-warning btn-lg"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
