  <div class="my-3 d-flex justify-content-between">
    <%= link_to 'Create a new article', new_article_path, class: "btn btn-success mb-3"%>
    <%= will_paginate @articles, list_classes: %w(pagination), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    <div style="width:200px;">&nbsp</div>
  </div>

  <%= render 'articles-list'%>
  <div class="my-3">
    <%= will_paginate @articles, list_classes: %w(pagination justify-content-center), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>
