<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being saved</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<div class="card shadow-lg p-5 bg-white rounded">
  <%= form_with(model: @article, local: true)  do |f|%>
    <div class="form-group row">
      <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"><%= f.label :title%>:</label>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control form-control-lg", id:"title" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"><%= f.label :description%>:</label>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control form-control-lg", id:"description", rows: 10 %>
      </div>
    </div>
    <div class="form-group row">
      <div class="justify-center m-auto">
        <%= f.submit class: "btn btn-success btn-lg" %>
        <%= link_to 'Cancel', articles_path, class: "btn btn-warning btn-lg"%>
      </div>
    </div>
  <% end %>
</div>
