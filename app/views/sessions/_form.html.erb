<div class="card shadow-lg bg-white rounded mt-3">
  <h5 class="card-header text-center"><%= header_title %></h5>
  <div class="card-body p-5">
    <%= form_with(scope: :session, url: login_path, local:true)  do |f|%>
      <div class="form-group row">
        <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"><%= f.label :email%>:</label>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control form-control-lg", id:"email", placeholder: "Enter your email address" %>
        </div>
      </div>
      <div class="form-group row">
        <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"><%= f.label :password%>:</label>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control form-control-lg", id:"password", placeholder: "Enter your password" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="justify-center m-auto">
          <%= f.submit "Login", class: "btn btn-success btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
